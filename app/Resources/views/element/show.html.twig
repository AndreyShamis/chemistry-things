{% extends 'base.html.twig' %}

{% block body %}
    <h1>Element</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ element.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ element.name }}</td>
            </tr>
            <tr>
                <th>Atomicnumber</th>
                <td>{{ element.atomicNumber }}</td>
            </tr>
            <tr>
                <th>Alias</th>
                <td>{{ element.alias }}</td>
            </tr>
            <tr>
                <th>Atomicmass</th>
                <td>{{ element.atomicMass }}</td>
            </tr>
            <tr>
                <th>Boilingpoint</th>
                <td>{{ element.boilingPoint }}</td>
            </tr>
            <tr>
                <th>Meltingpoint</th>
                <td>{{ element.meltingPoint }}</td>
            </tr>
            <tr>
                <th>Vanderwaalsradius</th>
                <td>{{ element.vanderwaalsRadius }}</td>
            </tr>
            <tr>
                <th>Ionicradius</th>
                <td>{{ element.ionicRadius }}</td>
            </tr>
            <tr>
                <th>Density</th>
                <td>{{ element.density }}</td>
            </tr>
            <tr>
                <th>Elgroup</th>
                <td>{{ element.elGroup }}</td>
            </tr>
            <tr>
                <th>Elblock</th>
                <td>{{ element.elBlock }}</td>
            </tr>
            <tr>
                <th>Elperiod</th>
                <td>{{ element.elPeriod }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('element_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('element_edit', { 'id': element.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
